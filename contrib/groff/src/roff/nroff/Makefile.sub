MAN1=nroff.n
NAMEPREFIX=$(g)
CLEANADD=nroff

all: nroff

nroff: nroff.sh
	rm -f $@
	sed -e "s|@BINDIR@|$(bindir)|g" \
	-e "s|@SEP@|$(SEP)|g" \
	-e $(SH_SCRIPT_SED_CMD) \
	-e "s|@VERSION@|$(version)$(revision)|" $(srcdir)/nroff.sh >$@
	chmod +x $@

install_data: nroff
	-test -d $(bindir) || $(mkinstalldirs) $(bindir)
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
	$(INSTALL_SCRIPT) nroff $(bindir)/$(NAMEPREFIX)nroff

uninstall_sub:
	-rm -f $(bindir)/$(NAMEPREFIX)nroff
